extends layout.pug

block content
  section.container
    h1.header= title
    img(src="indentation-war.png")        
    article.item
      div      
      if(data.length)                               
        table(class='table table-bordered table-hover')
          tr
            th Bases de Datos            
          each campo in data                                                             
            tr  
              td #{campo.Database}
              td
                form.form(method='post', action='/verTables/' + campo.Database)                          
                  input(class="btn btn-success" type="submit" value="Ver Tablas") 
      else
        div.error No tienes data que mostrar    	
      a(class="btn btn-dark" href='/') Inicio